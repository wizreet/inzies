---
import MainLayout from '../layouts/MainLayout.astro';

const releases = [
  {
    title: "Signal",
    year: "2024",
    type: "EP",
    image: "/inzies-band/images/releases/signal.jpg",
    links: {
      spotify: "#",
      apple: "#",
      bandcamp: "#"
    }
  },
  {
    title: "Patterns",
    year: "2023",
    type: "Single",
    image: "/inzies-band/images/releases/patterns.jpg",
    links: {
      spotify: "#",
      apple: "#",
      bandcamp: "#"
    }
  },
  {
    title: "Iteration",
    year: "2023",
    type: "Album",
    image: "/inzies-band/images/releases/iteration.jpg",
    links: {
      spotify: "#",
      apple: "#",
      bandcamp: "#"
    }
  },
  {
    title: "First Light",
    year: "2022",
    type: "EP",
    image: "/inzies-band/images/releases/first-light.jpg",
    links: {
      spotify: "#",
      apple: "#",
      bandcamp: "#"
    }
  }
];
---

<MainLayout title="Music" description="Our releases and where to stream them.">
  <!-- Header -->
  <div class="mb-16">
    <h1 class="section-title text-4xl md:text-5xl mb-6">Music</h1>
    <p class="text-xl text-[var(--text-secondary)]">Our releases. Stream, download, do your thing.</p>
  </div>

  <!-- Releases -->
  <section class="mb-20">
    <h2 class="text-2xl font-bold mb-8 border-b border-[var(--border-color)] pb-4">Releases</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {releases.map((release) => (
        <div class="card-base group overflow-hidden hover:scale-[1.02] transition-transform">
          <div class="aspect-square bg-[var(--bg-secondary)] flex items-center justify-center">
            <span class="text-6xl opacity-20">ðŸŽµ</span>
          </div>
          <div class="p-4">
            <span class="text-xs text-inzies-orange font-medium">{release.type} Â· {release.year}</span>
            <h3 class="text-lg font-bold mt-1">{release.title}</h3>
            <div class="flex gap-2 mt-3">
              <a href={release.links.spotify} class="text-sm text-[var(--text-secondary)] hover:text-inzies-orange transition-colors">Spotify</a>
              <span class="text-[var(--text-secondary)]">Â·</span>
              <a href={release.links.apple} class="text-sm text-[var(--text-secondary)] hover:text-inzies-orange transition-colors">Apple</a>
              <span class="text-[var(--text-secondary)]">Â·</span>
              <a href={release.links.bandcamp} class="text-sm text-[var(--text-secondary)] hover:text-inzies-orange transition-colors">Bandcamp</a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Streaming Platforms -->
  <section>
    <h2 class="text-2xl font-bold mb-8 border-b border-[var(--border-color)] pb-4">Listen Anywhere</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <a href="https://open.spotify.com/artist/3TVXtAsR1Inumwj472S9r4" target="_blank" rel="noopener noreferrer" class="card-base flex items-center justify-center gap-3 p-6 hover:bg-green-600/20 hover:border-green-500 transition-all group">
        <svg class="w-8 h-8 text-green-500" fill="currentColor" viewBox="0 0 24 24">
