          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 17.344c-.246.365-.673.486-1.04.244-2.853-1.742-6.446-2.138-10.679-1.171-.414.097-.83-.158-.927-.572-.097-.414.158-.828.572-.924 4.637-1.06 8.615-.604 11.832 1.385.365.241.485.676.242 1.038zm1.4-3.377c-.305.422-.858.6-1.28.294-3.26-2-8.233-2.58-12.09-1.414-.479.122-.985-.164-1.107-.644-.123-.479.163-.985.643-1.107 4.419-1.336 9.904-.687 13.54 1.59.422.308.602.86.294 1.281zm.12-3.51C15.235 8.44 8.85 8.186 5.161 9.335c-.573.178-1.18-.14-1.36-.713-.178-.574.14-1.18.713-1.36 4.258-1.322 11.334-1.068 15.807 1.601.535.319.71 1.006.39 1.541-.318.535-1.006.71-1.54.391-.003-.001-.005-.003-.008-.005z"/>
