---
/**
 * Footer Component
 *
 * Site footer with branding, navigation links, and social media links.
 * Uses centralized configuration and constants.
 *
 * @component
 */
import { siteConfig } from "@/config";
import { ROUTES, ARIA_LABELS } from "@constants/index";
import SocialLinks from "@components/social/SocialLinks.astro";

/** Current year for copyright - computed at build time */
const currentYear = new Date().getFullYear();

/** Footer navigation links */
const footerLinks = [
	{ href: ROUTES.home, label: "Home" },
	{ href: ROUTES.about, label: "About" },
	{ href: ROUTES.music, label: "Music" },
	{ href: ROUTES.gallery, label: "Gallery" },
] as const;
---

<footer
	class="bg-[var(--bg-secondary)]/50 relative z-10 border-t border-[var(--border-color)] backdrop-blur-sm"
	role="contentinfo"
	aria-label="Site footer"
>
	<div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
		<div class="grid grid-cols-1 gap-8 md:grid-cols-3">
			<!-- Brand Section -->
			<div class="space-y-4">
				<div class="flex items-center gap-3">
					<img
						src={`${ROUTES.home}LogoAnimations/logo-transparent.png`}
						alt={siteConfig.title}
						class="h-12 w-auto"
						width="48"
						height="48"
						loading="lazy"
						decoding="async"
					/>
					<div>
						<p class="text-sm text-[var(--text-muted)]">{siteConfig.subtitle}</p>
					</div>
				</div>
				<p class="max-w-prose text-sm leading-relaxed text-[var(--text-secondary)]">
					{siteConfig.description}
				</p>
			</div>

			<!-- Quick Links Section -->
			<nav class="space-y-4" aria-label="Footer navigation">
				<h4 class="text-lg font-bold">Links</h4>
				<ul class="space-y-2" role="list">
					{
						footerLinks.map((link) => (
							<li>
								<a
									href={link.href}
									class="block rounded text-[var(--text-secondary)] transition-colors hover:text-inzies-orange focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inzies-orange/40"
								>
									{link.label}
								</a>
							</li>
						))
					}
				</ul>
			</nav>

			<!-- Social & Contact Section -->
			<div class="space-y-4">
				<h4 class="text-lg font-bold">Connect</h4>
				<SocialLinks />
				<a
					href={`mailto:${siteConfig.social.email || "hello@inzies.band"}`}
					class="block rounded text-sm text-[var(--text-muted)] transition-colors hover:text-inzies-orange focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-inzies-orange/40"
					aria-label="Send email"
				>
					{siteConfig.social.email || "hello@inzies.band"}
				</a>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div
			class="mt-12 flex flex-col items-center justify-center gap-4 border-t border-[var(--border-color)] pt-8 sm:flex-row"
		>
			<p class="text-sm text-[var(--text-muted)]">
				<span aria-label="Copyright">Â©</span>
				{currentYear}
				{siteConfig.title}. All rights reserved.
			</p>
		</div>
	</div>
</footer>
